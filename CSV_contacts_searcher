import csv

class PhoneContact ():
    def __init__(self, name, phone):
        self.name = name
        self.phone = phone
    
    #def __str__(self):
        #return 'Name: {} and Phone: {}'.format(self.name, self.phone)

class Phone():
    def __init__(self):
        self.contacts = []
    
    def load_contacts_from_csv (self, file):
        with open(file, newline='') as csvfile:
            fieldnames = ['Name', 'Phone']
            reader = csv.DictReader(csvfile, fieldnames=fieldnames)
            for row in reader:
                self.contacts.append(PhoneContact(row['Name'],row['Phone']))
        #print(self.contacts)
        
    def search_contacts(self, phrase):
        
        contr = 0
        for contact in self.contacts:
            if phrase.lower() in contact.name.lower():
                print('Name: {} and Phone: {}'.format(contact.name, contact.phone))
                contr += 1
        if contr == 0:
            print('Not found')
    
ob = Phone()
ob.load_contacts_from_csv('contacts.csv')

phrase = input("Search for: ")
ob.search_contacts(phrase)
